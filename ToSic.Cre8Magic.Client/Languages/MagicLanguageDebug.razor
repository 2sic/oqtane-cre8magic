@using ToSic.Cre8magic.Controls
@inherits MagicControlBase
@code
{
    [Parameter, EditorRequired]
    public required MagicLanguageState State { get; set; }
}
@{
    Dictionary<string, object> GetMore() => new()
    {
        { "Language Settings", State.LanguageSettings },
        { "Languages To Show", State.Languages },
        { "Language Design", State.ThemeDesignSettings.DesignSettings }
    };
}
<MagicDebug Target="@State.LanguageSettings" Title="Language Settings" More="GetMore()">
    <Content>
        <ul>
            <li>Show: @State.Show</li>
        </ul>
    </Content>
</MagicDebug>
