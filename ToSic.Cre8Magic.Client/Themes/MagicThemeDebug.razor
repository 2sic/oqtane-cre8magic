@using Oqtane.UI
@using ToSic.Cre8magic.Controls
@inherits ComponentBase
@inject IMagicSettingsService SettingsService
@code {
    /// <inheritdoc cref="ToSic.Cre8magic.Components.MagicComponentBase.PageState"/>
    [CascadingParameter]
    public required PageState PageState { get; set; }
}
@{
    var themeContext = SettingsService.GetThemeContext(PageState);
}
<MagicDebug Target="@themeContext.ThemeSettings" Title="Current Settings for this Theme">
    <Content>
        <h4>Showing Debug for all settings</h4>
    </Content>
</MagicDebug>
