@using ToSic.Cre8magic.Breadcrumbs
@using ToSic.Cre8magic.Pages
@inherits ToSic.Cre8magic.ComponentsBs5.MagicBreadcrumbBase;

@code {
    public override IMagicPageDesigner Designer { get; set; } = new MagicBreadcrumbDesignerBs5();
}

<nav aria-label="breadcrumb">
    <ol class='@BreadcrumbKit.Pages.Classes("ol")'>
        @foreach (var item in BreadcrumbKit.Pages)
        {
            <li class='@item.Classes("li")'>
                @* TODO: IMPROVE HasLink / UseLink, etc. *@
                @if (item.IsActive)
                {
                    <span class='@item.Classes("span")' aria-current="page">@item.Name</span>
                }
                else
                {
                    <a href="@item.Link" class='@item.Classes("a")'>@item.Name</a>
                }
            </li>
        }
    </ol>
</nav>
