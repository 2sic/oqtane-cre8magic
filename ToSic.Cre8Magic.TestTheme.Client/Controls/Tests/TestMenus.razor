<h1>Test many Menus</h1>

@code {
    public const string TopLevelWithSubpagesId = "29";
    //public const string TopLevelWithSubpagesId = "15";

    // Temp for less debugging
    public bool ShowAll = true;
}
@* This wrapper sets the style so the menu is row-focused*@
<div class="navbar-expand-lg">
    @if (ShowAll)
    {

        <h2>No Settings</h2>
        <h3>Basic Menu without Setting, name none</h3>
        <MagicMenu></MagicMenu>
        <hr/>
    
        <h2>Various Settings</h2>
        <h3>Only one specific page (@nameof(MagicMenuSettingsData.Start)), no other params</h3>
        <h4>Using Attributes</h4>
        <MagicMenu Start="@TopLevelWithSubpagesId"></MagicMenu>
        <h4>Using @nameof(MagicMenuSettingsData)</h4>
        <MagicMenu MenuSettings="new() { Start = TopLevelWithSubpagesId }"></MagicMenu>

        <h3>Only one specific page (@nameof(MagicMenuSettingsData.Start), @nameof(MagicMenuSettingsData.Depth) = 0)</h3>
        <h4>Using Attributes</h4>
        <MagicMenu Start="@TopLevelWithSubpagesId" Depth="0"></MagicMenu>
        <h4>Using @nameof(MagicMenuSettingsData)</h4>
        <MagicMenu MenuSettings="new() { Start = TopLevelWithSubpagesId, Depth = 0 }"></MagicMenu>

        <h3>Only one specific page @TopLevelWithSubpagesId, with Depth=1</h3>
        <MagicMenu Start="@TopLevelWithSubpagesId" Depth="1"></MagicMenu>
        <MagicMenu MenuSettings="new() { Start = TopLevelWithSubpagesId, Depth = 1 }"></MagicMenu>

        <hr/>
        <h2>Start at current level</h2>
        <h3>Current level only (should only show one page...)</h3>
        <MagicMenu Start="." MenuId="Start-At-Current-Level-NoChildren"></MagicMenu>
        <MagicMenu MenuSettings='new() { Start = ".", Id = "test2" }'></MagicMenu>

        <h3>Current level with children</h3>
        <MagicMenu Start="." Depth="1" MenuId="Start-At-Current-Level-Children"></MagicMenu>
        <MagicMenu MenuSettings='new() { Start = ".", Depth = 1, Id = "test3" }'></MagicMenu>

        <h3>Current level children only</h3>
        <MagicMenu Start="." Children="true" Depth="0" Debug="true"></MagicMenu>

        <h3>Parent level only</h3>
        <MagicMenu Start="." Level="-1" Depth="0" Debug="true"></MagicMenu>

        <h3>Parent level children only</h3>
        <MagicMenu Start="." Level="-1" Children="true" Depth="0" Debug="true"></MagicMenu>

        <h3>Current from Root Level 1, no children</h3>
        <MagicMenu Start="." Level="1" Children="false" Depth="0" Debug="true"></MagicMenu>
        <h3>Current from Root Level 1, children</h3>
        <MagicMenu Start="." Level="1" Children="true" Depth="0" Debug="true"></MagicMenu>
        <h3>Current from Root Level 1, no-children Depth 1</h3>
        <MagicMenu Start="." Level="1" Children="false" Depth="1" Debug="true"></MagicMenu>

        <h3>Current from Root Level 2</h3>
        <MagicMenu Start="." Level="2" Children="true" Depth="0" Debug="true"></MagicMenu>

        <hr/>
        <h2>Start with specific numbers</h2>
        <h3>Specific Pages Listed here (Home, myPage, Login)</h3>
        <MagicMenu Start="1, 3, 5!" MenuSettings='new() { Start = "1, 3, 5!" }'></MagicMenu>

        <h3>Specific Pages Listed here (Home, myPage, Login)</h3>
        <MagicMenu PartName="Footer"></MagicMenu>

        <hr/>
        <h2>Json Settings</h2>
        <h3>Basic Menu without Setting, name "Main"</h3>
        <MagicMenu PartName="Main"></MagicMenu>

        <h3>Basic Menu without Setting, name "Mobile"</h3>
        <MagicMenu PartName="Mobile"></MagicMenu>
    }

    <h3>Basic Menu without Setting, name "Sidebar"</h3>
    <h4>PartName: SideBar</h4>
    <p>With PartName</p>
    <MagicMenu PartName="Sidebar"></MagicMenu>
    <p>With PartName in Settings and debug activated</p>
    <MagicMenu MenuSettings='new() { PartName = "Sidebar", Debug = new() { Admin = true } }'></MagicMenu>
    
    <h4>PartName: menu-test-part-unchanged</h4>
    <MagicMenu PartName="menu-test-part-unchanged"></MagicMenu>
    
    @*
        this doesn't work, as the name isn't found...
        <h4>PartName: test-part-unchanged (should auto-prefix)</h4>
        <MagicMenu PartName="test-part-unchanged"></MagicMenu>
    *@
    
    <h4>PartName: menu-test-part-rename-to-menu-new-name</h4>
    <MagicMenu PartName="menu-test-part-rename-to-menu-new-name"></MagicMenu>

    <hr/>
</div>