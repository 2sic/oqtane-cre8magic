{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "ToSic.Cre8magic.Client/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "force": true, // Re-build all the documentation
      "properties": {
        "TargetFramework": "net8.0",
        // "GenerateDocumentationFile": true,
        // "ProduceReferenceAssembly": true
      },
      // "namespaceLayout": "nested",
    }
  ],
  "build": {
    "content": [
      {
        // Note: new docfx convention places things in /pages
        "src": "pages",
        "files": [
          "**.md",
          "**.yml",
        ],
        "exclude": [
          // exclude _*.md files, as they are used for includes
          "**/_*.md",
          // exclude readme.md, which are meant for docs-admins
          "**/readme.md",
        ]
      },
      // {
      //   "files": [
      //     "**/*.{md,yml}"
      //   ],
      //   "exclude": [
      //     "_site/**"
      //   ]
      // },
      {
        "files": [
          "api/**.yml"
        ],
      },
      {
        "files": [
          "api/toc.yml",
          "api/**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        // Note: new docfx convention places things in /pages
        "cwd": "pages",
        "files": [
          "**.jpg",
          "**.png",
          "**.jpeg",
          "**.svg",
          "**.gif"
        ],
      },
      {
        "files": [
          "images/**",
          "assets/**"
        ]
      },
      {
        "files": [
          "schemas/**"
        ]
      }
    ],
    "output": "../docs",
    "template": [
      "default",
      "modern",
      "templates/nested"
    ],
    "globalMetadata": {
      // "_appName": "cre8magic",
      "_appTitle": "cre8magic",
      "_appLogoPath": "assets/cre8magic-logo50.svg",
      // "_appLogoPath": "assets/icon50.png",
      "_appFaviconPath": "assets/favicon.ico",
      "_enableNewTab": true,
      "_enableSearch": true,
      "pdf": false,
      "_gitUrlPattern": "github",
      "_disableContribution": false, // Disabling the "View Source" and "Improve this Doc" buttons.
    },
    // "xrefService": ["https://xref.learn.microsoft.com/query?uid={uid}"],
    // "postProcessors": ["ExtractSearchIndex"]
  }
}