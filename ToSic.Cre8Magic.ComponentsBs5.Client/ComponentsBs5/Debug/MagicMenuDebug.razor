@using ToSic.Cre8magic.Internal
@using ToSic.Cre8magic.Menus
@code {
    [Parameter, EditorRequired] public required IMagicMenuKit MenuKit { get; set; }

    [Parameter] public bool Standalone { get; set; } = false;
}
@{
    var settings = MenuKit.Settings;

    Dictionary<string, object?> GetMore() => new()
    {
        { "Menu Settings", settings },
        { "Log", MenuKit.GetLogEntries() }
    };
}
<MagicDebug Target="@MenuKit.Settings" Title="Settings (Menu)" More="GetMore()">
    <Button>
        @if (Standalone)
        {
            <text>🪲</text>
        }
        else
        {
            <li>🪲</li>
        }
    </Button>
    <Content>
        <ul>
            <li>Config Name:@settings.PartName</li>
            <li>Template: @settings.Template / Variant: @settings.Variant</li>
        </ul>
    </Content>
</MagicDebug>

